@model Test3Task.Models.Order

@{
    ViewBag.Title = "Order Create";
}
@section Body
{
 @using (Html.BeginForm())
 {
     <h2>@ViewBag.Title</h2>
     <div class="panel panel-default">
         <div class="panel-heading">Create</div>
         <div class="panel-body">
             <div class="form-group">
                 @Html.LabelFor(model => model.CustomerId, "Name")
                 @Html.DropDownList("CustomerId", String.Empty)
                 @Html.ValidationMessageFor(m=>m.CustomerId)
             </div>
             <div class="form-group">
                 @Html.LabelFor(model => model.ProductId, "Product")
                 @Html.DropDownList("ProductId", String.Empty)
                 @Html.ValidationMessageFor(m=>m.ProductId)
             </div>
             <div class="form-group">
                 @Html.LabelFor(model => model.Date)
                 @Html.EditorFor(model => model.Date)
                 @Html.ValidationMessageFor(m=>m.Date)
             </div>
         </div>
     </div>
    <input type="submit" class="btn btn-default" value="Save" />
 }
    @Html.ValidationSummary()
}

@section Footer{
    @Html.ActionLink("Back To Orders List","OrdersList")
}


