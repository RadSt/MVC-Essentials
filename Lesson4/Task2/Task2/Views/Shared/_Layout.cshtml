<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            @Html.ActionLink("Домашняя", "Index", "Home", null, new { @class = "navbar-brand" })
            @Html.ActionLink("Новости", "Index", "Home", null, new { @class = "navbar-brand" })
            @Html.ActionLink("О нас", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>
        <span class="pull-right">
            @Html.ActionLink("Войти", "Login", "Login", null, new { @class = "navbar-brand" })
            @Html.ActionLink("Регистрация", "Register", "Register", null, new { @class = "navbar-brand" })
        </span>
    </div>
</div>

<div class="container body-content">
    @RenderBody()
</div>

<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
</body>
</html>