@model IEnumerable<Test3Task.Models.Order>

@{
    ViewBag.Title = "SalesForCustomerReportShow";
}
@section Body
{
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm())
    {
        @Html.DropDownList("CustomerId",String.Empty)
        <input type="submit" value="ShowReportData" />
    }
    <table class="table table-striped">
        <tr class="table-bordered">
            <th>@Html.DisplayNameFor(m=>m.Customer.Name)</th>
            <th>@Html.DisplayNameFor(m=>m.Product.Name)</th>
            <th>@Html.DisplayNameFor(m=>m.Product.Price)</th>
            <th>@Html.DisplayNameFor(m=>m.Date)</th>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem=>m.Customer.Name)</td>
                <td>@Html.DisplayFor(modelItem=>m.Product.Name)</td>
                <td>@Html.DisplayFor(modelItem=>m.Product.Price)</td>
                <td>@Html.DisplayFor(modelItem=>m.Date)</td>
            </tr>
        }
    </table>
}

